<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="16dp">

        <TextView
            android:id="@+id/details_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textStyle="bold"
            android:text="Details" />

        <!-- Image 1 -->
        <ImageView
            android:id="@+id/image1"
            android:layout_width="match_parent"
            android:layout_height="600dp"
            android:src="@drawable/details_1"
            android:layout_marginTop="12dp"
            android:paddingRight="1dp"/>

        <TextView
            android:id="@+id/description1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Description for image 1" />

        <!-- Image 2 -->
        <ImageView
            android:id="@+id/image2"
            android:layout_width="match_parent"
            android:layout_height="600dp"
            android:src="@drawable/details_2"
            android:layout_marginTop="12dp"/>

        <TextView
            android:id="@+id/description2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Description for image 2" />

        <!-- Image 3 -->
        <ImageView
            android:id="@+id/image3"
            android:layout_width="match_parent"
            android:layout_height="600dp"
            android:src="@drawable/details_3"
            android:layout_marginTop="12dp"/>

        <TextView
            android:id="@+id/description3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Description for image 3" />

        <!-- Image 4 -->
        <ImageView
            android:id="@+id/image4"
            android:layout_width="match_parent"
            android:layout_height="600dp"
            android:src="@drawable/details_4"
            android:layout_marginTop="12dp"/>

        <TextView
            android:id="@+id/description4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Description for image 4" />

        <!-- Image 5 -->
        <ImageView
            android:id="@+id/image5"
            android:layout_width="match_parent"
            android:layout_height="600dp"
            android:src="@drawable/details_5"
            android:layout_marginTop="12dp"/>

        <TextView
            android:id="@+id/description5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Description for image 5" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="60dp"/>
        <!-- You can add more views below, such as images, buttons, etc. -->

    </LinearLayout>

</ScrollView>