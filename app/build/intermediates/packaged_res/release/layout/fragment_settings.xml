<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_marginBottom="100dp">

    <!-- Title for settings -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- Spacer -->
    <View
        android:layout_width="match_parent"
        android:layout_height="16dp" />


    <!-- Description for Time -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:text="Set your desired time here"
        android:textSize="14sp" />

    <!-- Time settings -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Time"
            android:textSize="16sp"/>

        <!-- Hour Picker -->
        <NumberPicker
            android:id="@+id/hourPicker"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:descendantFocusability="blocksDescendants"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal" />

        <!-- Minute Picker -->
        <NumberPicker
            android:id="@+id/minutePicker"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:descendantFocusability="blocksDescendants"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal" />


    </LinearLayout>

    <!-- Description for Time -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:text="Set your bottle here"
        android:textSize="14sp" />

    <!-- Selection among 3 components -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Bottle"
            android:textSize="16sp"/>


        <Spinner
            android:id="@+id/componentSelectionSpinner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:entries="@array/components_array" />

    </LinearLayout>

    <!-- Description Apply Button -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:text="Apply Button"
        android:textSize="14sp"
        android:gravity="center"
 />

    <Button
        android:id="@+id/applyButton"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="8dp"
        android:layout_weight="0.2"
        android:text="Apply" />


</LinearLayout>